.title
  %h4
    %i.fa.fa-chevron-circle-left.fa-fw
    - if for_route?
      = link_to "Route #{current_route.path}", admin_route_url(current_route)
    - else
      = link_to 'Settings', admin_settings_url
  %h1
    .right
      %small
        - if current_setting.system
          %i.fa.fa-lock.fa-fw
        - else
          - url = admin_setting_url(current_setting)
          - url = admin_route_setting_url(current_route, current_setting) if for_route?
          = link_to url, 'data-method' => 'delete', confirm: 'Are you sure?', class: :alert do
            %i.fa.fa-trash-o.fa-fw
            Remove
    %i.fa.fa-gear.fa-fw
    Edit
    = current_setting.name
= render partial: 'form', locals: {item: current_setting}
